@page "/ExponentionsAndRoots"
@rendermode InteractiveAuto

<h3>Exponentiations and Roots</h3>

<label for="input">Please enter a number:</label>
<InputNumber id="input" @bind-Value="_input" />

<h4>Exponentiations:</h4>
<ul>
    @for (int i = 0; i <= 30; i++)
    {
        <li>@_input^@i = @Math.Pow(_input, i)</li>
    }
</ul>

<h4>Roots:</h4>
<ul>
    @for (int i = 1; i <= 30; i++)
    {
        <li>@i-root of @_input = @Math.Pow(_input, 1.0 / i)</li>
    }
</ul>

@code {
    private int _input = 2;  // Default value, can be changed by the user.
}
