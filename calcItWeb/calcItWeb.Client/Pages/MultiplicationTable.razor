@page "/Multiplications"
@rendermode InteractiveAuto

<h3>Multiplications</h3>

<label for="input">Please enter a number:</label>
<InputNumber id="input" @bind-Value="_input" />

<h4>Multiplication Results:</h4>

<div class="outputs">
    <ul>
        @for (int i = 0; i < 50; i++)
        {
            <li>@_input * @i = @multiply(_input, i)</li>
        }
    </ul>
    <ul>
        @for (int i = 50; i <= 100; i++)
        {
            <li>@_input * @i = @multiply(_input, i)</li>
        }
    </ul>
    <ul>
        @for (int i = 100; i <= 150; i++)
        {
            <li>@_input * @i = @multiply(_input, i)</li>
        }
    </ul>
    <ul>
        @for (int i = 150; i <= 200; i++)
        {
            <li>@_input * @i = @multiply(_input, i)</li>
        }
    </ul>

    <ul>
        @for (int i = 200; i <= 250; i++)
        {
            <li>@_input * @i = @multiply(_input, i)</li>
        }
    </ul>
    <ul>
        @for (int i = 250; i <= 300; i++)
        {
            <li>@_input * @i = @multiply(_input, i)</li>
        }
    </ul>
    <ul>
        @for (int i = 300; i <= 350; i++)
        {
            <li>@_input * @i = @multiply(_input, i)</li>
        }
    </ul>
</div>

@code {
    private int _input = 1;

    private int multiply(int n1, int n2)
    {
        return n1 * n2;
    }
}
